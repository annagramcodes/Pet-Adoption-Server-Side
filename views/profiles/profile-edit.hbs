<form action="/{{_id}}/edit" method="POST" enctype="multipart/form-data">
  <label for="text">
    Name:
    <input type="text" name="name" value="{{name}}" />
  </label>
  <label>
    Email:
    <input type="email" name="email" value="{{email}}" />
  </label>
  <label>
    Password:
    <input type="password" name="password" value="{{email}}" />
  </label>
  <label for="text">Address:
    <input type="text" name="address" value="{{address}}" />
  </label>
  <label for="number">Phone number:
    <input type="number" name="phonenumber" value="{{phonenumber}}" />
  </label>
  <label for="image">
    Image
    <input type="file" name="user-img" />
  </label>

  <button type="submit">Submit</button>
</form>
<form action="/{{_id}}/delete" method="post">
  <button type="submit">Delete the profile</button>
</form>